<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.NutritionDetail">

        <ImageView
            android:id="@+id/foodImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="3dp"
            android:layout_alignParentTop = "true"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout_TextViews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout_TextViews"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/foodImageView">

            <TextView
                android:id="@+id/nutritionDetail_foodNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textAlignment="center"
                android:padding="3dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/nutritionDetail_foodCaloriTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Calori"
                android:textSize="20sp"
                android:textAlignment="center"
                android:padding="3dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/nutritionDetail_foodCarbohydrateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Carbohydrate"
                android:textSize="20sp"
                android:textAlignment="center"
                android:padding="3dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/nutritionDetail_foodProteinTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Protein"
                android:textSize="20sp"
                android:textAlignment="center"
                android:padding="3dp"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/nutritionDetail_foodFatTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food Fat"
                android:textSize="20sp"
                android:textAlignment="center"
                android:padding="3dp"
                android:layout_margin="5dp"/>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>